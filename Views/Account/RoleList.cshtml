@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


<div class="container d-flex bg-secondary opacity-10 justify-content-center">
    <h1 class=" text-dark">Available Roles </h1>
</div>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-8">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Role ID</th>
                        <th>Role Name</th>
                    </tr>
                </tbody>
                <tbody>
                    @foreach(var role in Model)
                    {
                        <tr>
                            <th>@role.Id</th>
                            <th>@role.Name</th>
                        </tr>
                    }
                </tbody>

            </table>


        </div>
    </div>
</div>