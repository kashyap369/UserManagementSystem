@model AuthApp.Models.ViewModel.RoleAssignVm
<div class="container d-flex justify-content-center">
    <h1>Assing Roles</h1>
</div>

<div class="container">
    <div class="row d-flex justify-content-center">
        <form method="post">
            <div class="col-6 mb-3">
                <label class="form-label" >Username</label>
                <input class="form-control" asp-for="Username" readonly type="text" />
            </div>
            <div class="form-group">
                <label for="SelectedRole">Available Roles</label>
                <select asp-for="SelectedRole" class="form-control">
                    <option value="">-- Select Role --</option>
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary" type="submit" asp-action="AssignRole" asp-controller="Account">Assign Role </button>

        </form>
    </div>
</div>